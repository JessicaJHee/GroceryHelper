#:kivy 2.0.0
WindowManager:
    GenerateList:
    RecipeList:
    ViewRecipe:
    AddRecipe:
    RandomRecipe:
    ChosenRecipe:
    ListSelection:
    FinalListRand:
    Explore:

<AddRecipe>:
    name: "AddRecipe"
    recipename: recipename
    ingredients: ingredients
    
    canvas.before:
        Color: 
        	rgba: (0.98, 0.98, 0.98, 1)
        Rectangle:
        	pos: self.pos
        	size: self.size
    FloatLayout:
        MDRoundFlatButton:
            padding: "10dp"
            text: "<"
            pos_hint: {"center_x": .2, "center_y": .95}
            font_style: "Subtitle1"
            text_color: (0,0,0)
            line_color: (1,1,1)
            line_width: 1
            on_release: 
                app.root.current = "GenerateList"
                root.manager.transition.direction = "right"
        MDLabel:
            font_style: "Subtitle2"
            text: "Add Recipe"
            halign: "center"
            pos_hint: {"center_y": .95}


    ScrollView:
        size_hint_y: 0.8
        pos_hint: {'x': 0, 'y': .1}
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            size: (root.width, root.height)
            cols:1 
            size_hint: None, None
            height: self.minimum_height
            padding: ['40dp', '30dp', '40dp', '40dp']
            row_default_height: "70dp"
    		row_force_default: True

            MDLabel:
                font_style: "Subtitle2"
                text: "Recipe Name"
                halign: "left"
            MDTextField:
                mode: "fill"
                fill_color: (0.9,0.86,0.988,0.6)
                id: recipename
            MDLabel:
                font_style: "Subtitle2"
                text: "Ingredients"
                halign: "left"     
            MDTextField:
                mode: "fill"
                fill_color: (0.9,0.86,0.988,0.6)
                multiline: True
                id: ingredients
                max_height: "80dp"
                hint_text: "Hit enter after each entry!"
            
    MDFloatingActionButton:
        icon: "check"
        elevation: 8
        md_bg_color: (0.976, 0.43, 0.27, 1)
        pos_hint: {"center_x": 0.85, "center_y": 0.15}
        on_release: 
            root.add_recipe()
            app.root.current = "GenerateList"
            root.manager.transition.direction = "left"
            
<GenerateList>: 
    name:"GenerateList"
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: "GenerateList"
            icon: "clipboard-list-outline"   
            text: "Generate"
            FloatLayout:
                padding: 40
                MDLabel:
                    font_style: "Subtitle2"
                    text: "Choose recipes to generate your personalized grocery list"
                    halign: "center"
                    pos_hint: {"center_y": .8}
                Image:
                    source: 'grocerybasket.png'
                    size_hint_x: 0.5
                    size_hint_y: 0.5
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                MDFillRoundFlatButton:
                    text: "Get Started"
                    pos_hint: {"center_x": .5, "center_y": .18}
                    theme_text_color: "Custom"
                    text_color: (1,1,1,1)
                    md_bg_color: (0.976,0.43,0.27)
                    on_release: 
                        app.root.current = "ListSelection"
                        root.manager.transition.direction = "left"
                MDLabel:
                    font_style: "Subtitle2"
                    text: "View current list"
                    halign: "center"
                    pos_hint: {"center_y": .1}
                    text_color: (0.8,0.8,0.8,1)
                MDIconButton:
                    pos_hint: {"center_x": .75,"center_y": .1}
                    icon: "cart-arrow-right"
                    user_font_size: "36sp"
                    theme_text_color: "Custom"
                    text_color: (0.976,0.43,0.27,1)
                    on_release:
                        app.root.current = "FinalListRand"
                        root.manager.transition.direction = "left"
        MDBottomNavigationItem:
            name: "RecipeList"
            icon: "expand-all-outline"   
            text: "View All"
            BoxLayout:
                orientation: "vertical"
                size_hint_y: 0.95
                ScrollView:
                    do_scroll_x: False
                    MDList:        
                        id: container   
            FloatLayout:
                MDLabel:
                    font_style: "Subtitle2"
                    text: "All Recipes"
                    halign: "center"
                    pos_hint: {"center_y": .95}
                MDFillRoundFlatButton:
                    text: "+ Add Recipe"
                    pos_hint: {"center_x": .5, "center_y": .1}
                    theme_text_color: "Custom"
                    text_color: (1,1,1,1)
                    md_bg_color: (0.976,0.43,0.27)
                    on_release: 
                        app.root.current = "AddRecipe"
                        root.manager.transition.direction = "left"

        MDBottomNavigationItem:
            name: "ExplorePage"
            icon: "card-search-outline" 
            text: "Explore" 
            FloatLayout:
                MDLabel:
                    text:"Explore new recipes from all over the world!"
                    pos_hint: {"center_x": .5, "center_y": .85 }
                    halign: "center"
                    font_style: "Subtitle2"
                Image:
                    source: 'explore.png'
                    size_hint: 0.5,0.5
                    pos_hint: {"center_x": 0.5, "center_y": 0.55}
                MDFillRoundFlatButton:
                    text: "Explore"
                    pos_hint: {"center_x": .5, "center_y": .1}
                    theme_text_color: "Custom"
                    text_color: (1,1,1,1)
                    md_bg_color: (0.976,0.43,0.27)
                    on_release: 
                        app.root.current = "Explore"
                        root.manager.transition.direction = "left"
                             
        MDBottomNavigationItem:
            name: "Profile"
            icon: "account-circle-outline"  
            text: "Profile" 
